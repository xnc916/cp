<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/iv_add_manage_item"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/uwo"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:layout_toRightOf="@id/iv_add_manage_item"
                android:layout_marginLeft="10dp"
                android:text="剩余:"/>
            <TextView
                android:id="@+id/tv_surplus_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:layout_toRightOf="@id/tv"
                android:text="5天15小时"/>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/color_333333"
                    android:gravity="center"
                    android:text="高/低频彩返点"/>
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTabbar"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_add_max"
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_333333"
                            android:layout_height="wrap_content"
                            android:text="8.0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_333333"
                            android:layout_height="wrap_content"
                            android:text="/"/>
                        <TextView
                            android:id="@+id/tv_add_min"
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_333333"
                            android:layout_height="wrap_content"
                            android:text="7.0"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_add_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            android:layout_margin="5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#f0f0f0"/>
    </LinearLayout>
</LinearLayout>