<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/default_head_bar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/topimg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="#EA4C59" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="多重好礼天天送"
                    android:textColor="#EA4C59"
                    android:textSize="17sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="#EA4C59" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_img_jbjjp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/button_jbjjp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="首充礼包" />


                    <TextView
                        android:id="@+id/tv_img_jjzz"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@mipmap/button_icon_jjzz"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="充值抢红包" />

                <TextView
                    android:id="@+id/tv_img_zzyhq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="22dp"
                    android:drawableTop="@mipmap/button_icon_zzyhq"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="积分活动大放送" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/gap_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:layout_alignParentRight="true"
                        android:background="#EA4C59" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="活动更精彩"
                    android:textColor="#EA4C59"
                    android:textSize="17sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="#EA4C59" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/rl_sclj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/subject_iv1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/activity_icon_01"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/subject_tv_intro1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开始时间：2017-04-24"
                            android:textSize="12sp"
                            android:layout_below="@+id/subject_tv_name1"
                            android:layout_alignLeft="@+id/subject_tv_name1"
                            android:layout_alignStart="@+id/subject_tv_name1"
                            android:layout_marginTop="5dp" />
                        <TextView
                            android:id="@+id/subject_tv_intro_end1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结束时间：2017-04-24"
                            android:textSize="12sp"
                            android:layout_above="@+id/textView1"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp" />

                        <TextView
                            android:id="@+id/subject_tv_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/subject_iv1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="首充领奖"
                            android:textColor="@color/SelectedTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/subject_tv_intro1"
                            android:layout_marginTop="5dp"
                            android:id="@+id/textView1" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_czqhb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/subject_iv"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/activity_icon_02"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/subject_tv_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开始时间：2017-04-24"
                            android:textSize="12sp"
                            android:layout_below="@+id/subject_tv_name"
                            android:layout_alignLeft="@+id/subject_tv_name"
                            android:layout_alignStart="@+id/subject_tv_name"
                            android:layout_marginTop="5dp" />
                        <TextView
                            android:id="@+id/subject_tv_intro_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结束时间：2017-04-24"
                            android:textSize="12sp"
                            android:layout_above="@+id/textView"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp" />

                        <TextView
                            android:id="@+id/subject_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/subject_iv"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="充值抢红包"
                            android:textColor="@color/SelectedTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/subject_tv_intro"
                            android:layout_marginTop="5dp"
                            android:id="@+id/textView" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_yhcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/subject_iv3"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/activity_icon_02"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/subject_tv_intro3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开始时间：2017-04-24"
                            android:textSize="12sp"
                            android:layout_below="@+id/subject_tv_name3"
                            android:layout_alignLeft="@+id/subject_tv_name3"
                            android:layout_alignStart="@+id/subject_tv_name3"
                            android:layout_marginTop="5dp" />
                        <TextView
                            android:id="@+id/subject_tv_intro_end3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结束时间：2017-04-24"
                            android:textSize="12sp"
                            android:layout_above="@+id/textView3"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp" />

                        <TextView
                            android:id="@+id/subject_tv_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/subject_iv3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="充值抢红包"
                            android:textColor="@color/SelectedTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/subject_tv_intro3"
                            android:layout_marginTop="5dp"
                            android:id="@+id/textView3" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>