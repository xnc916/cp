    <RelativeLayout
        android:id="@+id/rl_bottom_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/ll_bottom_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 首页购彩 -->

            <LinearLayout
                android:id="@+id/llhome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bottom_background_selector_home"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页购彩"
                    android:layout_marginBottom="5dp"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/bottom_text_size" />
            </LinearLayout>
            <!-- 天天有礼 -->

            <LinearLayout
                android:id="@+id/llsecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bottom_background_selector_second" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天天有礼"
                    android:layout_marginBottom="5dp"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/bottom_text_size" />
            </LinearLayout>

            <!-- 开奖信息 -->

            <LinearLayout
                android:id="@+id/llthird"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bottom_background_selector_third"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开奖信息"
                    android:layout_marginBottom="5dp"
                    android:textColor="@drawable/textview_selector"
                    android:textSize="@dimen/bottom_text_size" />
            </LinearLayout>
            <!-- 账户管理 -->


                <LinearLayout
                    android:id="@+id/llmy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_bottom_shoppingCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/bottom_background_selector_my"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户管理"
                        android:layout_marginBottom="5dp"
                        android:textColor="@drawable/textview_selector"
                        android:textSize="@dimen/bottom_text_size" />
                </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/rl_bottom_home"
        android:background="@color/gap_line" />

    <FrameLayout
        android:id="@+id/content_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view"
        android:background="#FFF"/>

</RelativeLayout>
