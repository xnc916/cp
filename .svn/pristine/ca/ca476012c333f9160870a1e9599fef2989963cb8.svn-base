<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/default_head_bar_back_img"
        android:id="@+id/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/mypagebackground"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/setting_feedback_customer_service"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView" />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/un_user_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imageView"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorWhite" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:background="@mipmap/buy_lottery_guide"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_pink">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="账户余额"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/tv_user_balance"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:text="@string/un_money"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>

            <View
                android:layout_width="0.2dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gap_line" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="高频点返彩"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/tv_user_maxRebate"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/un_money"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
            <View
                android:layout_width="0.2dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gap_line" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="低频点返彩"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/tv_user_minRebate"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/un_money"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorWhite">
        <Button
            android:id="@+id/btn_left"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_red"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/btn_center"
            android:textColor="@color/colorWhite"
            android:text="快速充值"/>
        <Button
            android:id="@+id/btn_center"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_red"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:text="便捷提现"/>
        <Button
            android:id="@+id/btn_right"
            android:layout_toRightOf="@+id/btn_center"
            android:background="@drawable/btn_red"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:text="我的红包"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
        <ExpandableListView
            android:id="@+id/expandablelistview"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>