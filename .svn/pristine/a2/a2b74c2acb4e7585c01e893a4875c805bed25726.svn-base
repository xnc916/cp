<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiongyuan.lottery.homepage.activity.PKActivity"
    android:orientation="vertical">
    <include layout="@layout/default_head_bar_back"
        android:id="@+id/title"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.01dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/Pk_time_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            />
        <View
            android:id="@+id/xian"
            android:layout_below="@+id/Pk_time_show"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gap_line"/>
        <WebView
            android:id="@+id/pk_web"
            android:layout_below="@id/xian"
            android:layout_above="@+id/xian2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/xian2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="机选"
                android:textColor="@color/colorWhite"
                android:background="@color/contentColorTwo"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#cccccc">
            <com.xiongyuan.lottery.homepage.view.SimpleNumberPicker
                android:id="@+id/number_picker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:min_number="1"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tz_bs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:background="@color/color_333333"
                android:text="共0注 0元"/>
            <TextView
                android:id="@+id/tv_qd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:background="@color/colorTabbar"
                android:text="确定"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
