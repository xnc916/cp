<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/bank_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="30dp"
        android:text="用户名"
        />

    <TextView
        android:id="@+id/bank_hang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bank_user"
        android:layout_centerHorizontal="true"
        android:text="银行" />

    <TextView
        android:id="@+id/bank_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bank_user"
        android:layout_alignStart="@+id/bank_user"
        android:layout_below="@+id/bank_user"
        android:layout_marginTop="20dp"
        android:text="卡号" />
</RelativeLayout>
