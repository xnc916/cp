<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_minus"
        />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/image_minus"
        android:layout_alignTop="@id/image_minus"
        android:layout_toRightOf="@id/image_minus"
        android:gravity="center"
        android:lines="1"
        android:text="1"
        android:textSize="12dp"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/image_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_number"
        android:src="@mipmap/btn_plus"/>


</merge>